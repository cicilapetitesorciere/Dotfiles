# Sway config
# Ciaran Neely

# ====================
# variable definitions
# ====================
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

# ==============
# style & layout
# ==============
bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen 

bindsym $mod+Shift+space floating toggle

bindsym $mod+a focus parent
bindsym $mod+d focus child

font xft:JetBrains Mono 11

gaps inner 10

# =================
# program launchers
# =================
bindsym $mod+slash exec wofi --show run

bindsym $mod+Return exec alacritty
bindsym $mod+Shift+Return exec cool-retro-term
bindsym $mod+n exec firefox
bindsym $mod+Shift+d exec discord

# ======
# system
# ======
bindsym $mod+Shift+q kill
bindsym XF86MonBrightnessUp exec "~/.config/sway/brightness-up.sh" 
bindsym XF86MonBrightnessDown exec "~/.config/sway/brightness-down.sh" 

bindsym $mod+Escape exec "~/.config/sway/lock.sh"

bindsym Print --release exec --no-startup-id grimshot copy area

# ==========
# workspaces
# ==========
output HDMI-A-1 pos 0 350
output HDMI-A-2 pos 1360 0
output DP-3 pos 3280 100

workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-2
workspace 5 output HDMI-A-2
workspace 6 output HDMI-A-2
workspace 7 output DP-3
workspace 8 output DP-3
workspace 9 output DP-3

bindsym $mod+KP_1 workspace number 1
bindsym $mod+KP_2 workspace number 2
bindsym $mod+KP_3 workspace number 3
bindsym $mod+KP_4 workspace number 4
bindsym $mod+KP_5 workspace number 5
bindsym $mod+KP_6 workspace number 6
bindsym $mod+KP_7 workspace number 7
bindsym $mod+KP_8 workspace number 8
bindsym $mod+KP_9 workspace number 9

bindsym $mod+Control+KP_1 move container to workspace number 1; workspace number 1
bindsym $mod+Control+KP_2 move container to workspace number 2; workspace number 2
bindsym $mod+Control+KP_3 move container to workspace number 3; workspace number 3
bindsym $mod+Control+KP_4 move container to workspace number 4; workspace number 4
bindsym $mod+Control+KP_5 move container to workspace number 5; workspace number 5
bindsym $mod+Control+KP_6 move container to workspace number 6; workspace number 6
bindsym $mod+Control+KP_7 move container to workspace number 7; workspace number 7
bindsym $mod+Control+KP_8 move container to workspace number 8; workspace number 8
bindsym $mod+Control+KP_9 move container to workspace number 9; workspace number 9

# =================
# window navigation
# =================
floating_modifier $mod normal

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# =======================
# autostart & alwaysstart
# =======================

seat seat0 hide_cursor 200
exec "~/.config/sway/autostart.sh"
include style
bar {
    swaybar_command waybar
}
